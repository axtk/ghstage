{
  "name": "ghstage",
  "version": "2.2.11",
  "description": "",
  "main": "dist/bin.js",
  "bin": {
    "ghshape": "dist/bin.js"
  },
  "scripts": {
    "build": "npx npm-run-all clean build-bin -s build-css",
    "build-bin": "npx esbuild ./src/bin/run.ts --bundle --outfile=dist/bin.js --platform=node --external:jsdom --external:markdown-it",
    "build-css": "node -e \"require('node:fs').cpSync('src/css', 'dist/css', {force: true, recursive: true});\"",
    "clean": "node -e \"require('node:fs').rmSync('dist', {force: true, recursive: true});\"",
    "prepublishOnly": "npm run build",
    "preversion": "npx npm-run-all shape build",
    "shape": "npx codeshape"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axtk/ghstage.git"
  },
  "license": "ISC",
  "author": "axtk",
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.14.1"
  },
  "dependencies": {
    "args-json": "^1.2.4",
    "jsdom": "^26.1.0",
    "markdown-it": "^14.1.0",
    "stfm": "^0.1.0"
  }
}
