{
  "name": "ghstage",
  "version": "0.1.1",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm-run-all clean build-js build-css",
    "build-css": "node -e \"require('node:fs').copyFileSync('src/index.css', 'dist/index.css');\"",
    "build-js": "esbuild index.ts --bundle --outfile=dist/index.js --platform=browser --minify",
    "clean": "node -e \"require('node:fs').rmSync('dist', {force: true, recursive: true});\"",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axtk/ghstage.git"
  },
  "license": "ISC",
  "author": "axtk",
  "devDependencies": {
    "esbuild": "^0.25.2",
    "npm-run-all": "^4.1.5"
  }
}
